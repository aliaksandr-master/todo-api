<div class="clearfix form-control-wr">
	<div>
        <input class="chk" id="form-element-flag-{{cid}}-1" name="{{name}}" type="radio"{{#if value}} checked="checked"{{/if}} value="1"/>
        <label class="chk-label" for="form-element-flag-{{cid}}-1">{{label}} <em>true</em></label>
	</div>
	<div>
        <input class="chk" id="form-element-flag-{{cid}}-2" name="{{name}}" type="radio"{{#if value}}{{else}} checked="checked"{{/if}} value="0"/>
        <label class="chk-label" for="form-element-flag-{{cid}}-2">{{label}} <em>false</em></label>
	</div>
</div>