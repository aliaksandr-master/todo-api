<div class="form-control-wr">
	{{#if label}}
        <label class="form-label">
            <span {{#if required}}title="required!"{{/if}} class="label pull-right label-{{#if required}}warning{{else}}danger{{/if}}">{{type}}</span>
			{{label}}
        </label>
	{{/if}}
    <textarea name="{{name}}" {{#if required}}required{{/if}} class="form-control input-sm" autocomplete="on" placeholder="{{label}}" cols="30" rows="10">{{value}}</textarea>
</div>
