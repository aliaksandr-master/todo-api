<div class="form-control-wr">
	{{#if label}}
        <label class="form-label">
			{{#if required}}
			<b title="required!" class="label pull-right label-danger">
				<span class="glyphicon glyphicon-star"></span>
			</b>
			{{/if}}
            <b class="label pull-right label-default">{{type}}</b>
			{{label}}
        </label>
	{{/if}}
    <textarea name="{{name}}" {{#if required}}required{{/if}} class="form-control input-sm" autocomplete="on" placeholder="{{label}}" cols="30" rows="10">{{value}}</textarea>
</div>
